{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "outDir": "dist",
    "noEmit": false
  },
  "include": ["lambda/**/*.ts", "lambda/__tests__/**/*.ts"],
  "exclude": ["node_modules"]
}
